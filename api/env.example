# Financial Document Analyzer - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Financial Document Analyzer API
APP_VERSION=2.0.0
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: sqlite or mongodb
DATABASE_TYPE=mongodb

# =============================================================================
# CrewAI Configuration
# =============================================================================
# OPENAI_API_KEY=open-ai-api-key


# SQLite Configuration (when DATABASE_TYPE=sqlite)
SQLITE_DB_PATH=auth.db

# MongoDB Configuration (when DATABASE_TYPE=mongodb)
MONGODB_CONNECTION_STRING=mongodb://admin:password123@localhost:27017/
MONGODB_DATABASE_NAME=financial_analyzer

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

# =============================================================================
# FLOWER MONITORING
# =============================================================================
FLOWER_BASIC_AUTH=admin:admin

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify for production deployment

# DATABASE_TYPE=mongodb
# MONGODB_CONNECTION_STRING=mongodb://admin:secure_password@mongodb-cluster:27017/
# REDIS_URL=redis://redis-cluster:6379/0
# JWT_SECRET_KEY=your-super-secure-secret-key-here
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
